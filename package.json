{
	"name": "argus",
	"version": "0.1.0",
	"description": "Debug, replay, and understand every MCP tool call - Datadog for MCPs",
	"type": "module",
	"main": "dist/app/cli/index.js",
	"bin": {
		"argus": "./dist/app/cli/index.js"
	},
	"scripts": {
		"build": "tsc && npm run build:ui",
		"build:ui": "vite build --config web/vite.config.ts",
		"dev:test-server": "tsx src/devtools/test-server.ts",
		"dev:ui": "vite --config web/vite.config.ts",
		"start": "tsx src/app/cli/index.ts",
		"inspect": "tsx src/app/cli/index.ts",
		"call": "tsx src/devtools/test-client.ts",
		"rebuild": "npm rebuild better-sqlite3",
		"rebuild:claude": "export PATH=\"$HOME/.nvm/versions/node/v16.13.1/bin:$PATH\" && npm rebuild better-sqlite3",
		"postinstall": "echo '⚠️  If using Claude Desktop, run: npm run rebuild:claude'"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"debugging",
		"monitoring",
		"proxy",
		"argus"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.25.1",
		"@tanstack/react-query": "^5.90.16",
		"better-sqlite3": "^12.5.0",
		"chalk": "^5.6.2",
		"commander": "^13.1.0",
		"express": "^5.2.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"uuid": "^13.0.0"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.6.13",
		"@types/express": "^5.0.6",
		"@types/node": "^25.0.3",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@types/uuid": "^10.0.0",
		"@vitejs/plugin-react": "^4.3.3",
		"autoprefixer": "^10.4.20",
		"postcss": "^8.4.49",
		"tailwindcss": "^3.4.17",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite": "^5.4.11"
	}
}
